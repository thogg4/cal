<div class="event-schedule-area-two bg-color pad100">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <div class="section-title text-center">
          <div class="title-text">
            <h2>Raleigh South Stake Event Schedule</h2>
          </div>
          <p>
          Some explanation text
          </p>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-12 tab-content">
        <div class="table-responsive">
          <table class="table">
            <thead>
              <tr>
                <th scope="col">Month</th>
                <th scope="col">Day</th>
                <th scope="col">Time</th>
                <th scope="col">Description</th>
                <th class="text-center" scope="col">Location</th>
              </tr>
            </thead>
            <tbody>
              <% @icalendar.events_by_month.each do |month, events| %>
                <% events.each_with_index do |event, index| %>
                  <tr class="inner-box">
                    <th scope="row">
                      <h4>
                        <span><%= index.zero? ? month : nil %></span>
                      </h4>
                    </th>
                    <th scope="row">
                      <span><%= event.dtstart.to_datetime.strftime('%A / %d') %></span>
                    </th>
                    <td>
                      <span><%= event.dtstart.to_datetime.strftime('%l:%M %p') %></span>
                    </td>
                    <td>
                      <div class="event-wrap">
                        <h4><%= event.summary %></h4>
                        <div class='meta'>
                          <%= event.description %>
                        </div>
                      </div>
                    </td>
                    <td>
                      <div class="r-no">
                        <span><%= event.location ? event.location : nil %></span>
                      </div>
                    </td>
                  </tr>
                <% end %>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
